<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="CyberfootLogConfig" monitorInterval="30">
  <Properties>
    <Property name="LOG_PATH">${sys:LOG_PATH:-${sys:user.dir}/logs}</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
    </Console>
    <RollingFile name="File"
                 fileName="${LOG_PATH}/cyberfoot.log"
                 filePattern="${LOG_PATH}/cyberfoot-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="14"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
