{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar backend",
      "type": "shell",
      "command": "mvn",
      "args": ["-f", "backend/pom.xml", "spring-boot:run"],
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "Iniciar frontend",
      "type": "shell",
        "command": "npm",
        "args": ["start"],
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "isBackground": true,
        "group": "build"
    },
    {
      "label": "Iniciar backend y frontend",
      "dependsOn": ["Iniciar backend", "Iniciar frontend"],
      "dependsOrder": "parallel",
      "group": "build"
    }
  ]
}
